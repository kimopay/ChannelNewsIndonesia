<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_foto_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_foto_vidoe"
                        android:layout_width="332dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_video_cnn" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginBottom="10dp"
                android:text="Himbauan Gubernur Sulawesi Tenggara Ali Mazi tentang Vaksinasi Covid 19	"
                android:layout_below="@+id/cv_foto_video"
                android:paddingHorizontal="14dp"
                android:textColor="@color/black"
                android:layout_width="332dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>