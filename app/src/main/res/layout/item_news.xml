<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="6dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_foto"
            android:layout_width="90dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp"
            android:layout_height="90dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_foto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/img_cnn_2" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_toRightOf="@id/cv_foto"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Gubernur Ali Mazi Lantik Bupati dan Wakil Bupati Muna"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_news"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/cv_foto"
            tools:text="Daerah | Jumat, 17 September 2021"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            android:src="@drawable/ic_baseline_bookmark_border_24"
            app:tint="@color/grey" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>