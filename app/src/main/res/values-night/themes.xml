<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChannelNewsIndonesia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_cnn</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@color/color_primary_cnn_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary_cnn</item>
        <item name="colorSecondaryVariant">@color/color_primary_cnn</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SimpleTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/color_primary_cnn</item>
        <item name="colorSurface">@color/white</item>
        <!--        <item name="colorOnSurface">@color/color_primary_cnn</item>-->
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="color">@color/color_primary_cnn</item>
        <item name="android:textAllCaps">false</item>
        <!--        <item name="fontFamily">@font/rubik</item>-->
        <!--        <item name="android:fontFamily">@font/rubik</item>-->
    </style>
</resources>